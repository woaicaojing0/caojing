<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f1f6"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp" >

        <TextView
            android:id="@+id/txt_menu_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="编辑"
            android:textColor="#4ca4ff"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/txt_add_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_menu_addcity" />
    </RelativeLayout>

    <ListView
        android:id="@+id/list_menu_city"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#e1e2e6"
        android:dividerHeight="0.6dp"
        android:listSelector="#4ca4ff" >
    </ListView>

</LinearLayout>